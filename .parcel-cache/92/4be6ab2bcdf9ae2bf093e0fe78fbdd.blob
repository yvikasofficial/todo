* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Roboto', sans-serif;
}

.bg-img-wrapper {
    height: 40vh;
    overflow: hidden;
    position: relative;
}

.bg-img-wrapper div {
    background: linear-gradient(0deg, rgba(34,193,195,0.6712885837928921) 0%, rgba(253,187,45,0.6236695361738445) 100%);
    position: absolute;
    height: 100%;
    width: 100%;
}

.bg-img-wrapper img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center top;

}

.main {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: max-content;
    padding-bottom: 150px;
}

.main-wrapper {
    width: 700px;
    margin: 0 auto;
}

.title {
    margin-top: 100px;
}


.title h2 {
    font-size: 50px;
    font-weight: bold;
    color: white;
    letter-spacing: 10px;
}

/* TODO INPUT */

.todo-input {
    box-shadow: 2px 2px 10px 5px rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    overflow: hidden;    
}

.todo-input input {
    width: 100%;
    height: 50px;
    margin-top: 30px;
    border: none;
    font-size: 20px;
    padding: 0 20px;
    font-family: inherit;
}

.todo-input:focus {
    outline: none !important;
    border: none;
}

.todo-items {
    background-color: white;
    margin-top: 40px;
    box-shadow: inset 0 0 10px;
    box-shadow: 2px 2px 10px 5px rgba(0, 0, 0, 0.2);
    border-radius: 5px;
}

.todo-items .item {
    padding: 15px 20px;
    border-bottom: 1px solid rgba(0, 0, 0, .1);
    display: flex;
    align-items: center;
    position: relative;
}

.item input {
    scale: 2;
    margin-right: 20px;
}

.item div {
    position: absolute;
    right: 30px;
    color: #33AFFF;

}

.item div:hover {
    opacity: .8;
    cursor: pointer;
}