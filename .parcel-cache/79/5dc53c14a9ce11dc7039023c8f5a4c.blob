* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Roboto', sans-serif;
}

.bg-img-wrapper {
    height: 40vh;
    overflow: hidden;
    position: relative;
}

.bg-img-wrapper div {
    background: linear-gradient(0deg, rgba(34,193,195,0.6712885837928921) 0%, rgba(253,187,45,0.6236695361738445) 100%);
    position: absolute;
    height: 100%;
    width: 100%;
}

.bg-img-wrapper img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center top;

}

.main {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: max-content;
}

.main-wrapper {
    width: 700px;
    margin: 0 auto;
}

.title {
    margin-top: 100px;
}


.title h2 {
    font-size: 50px;
    font-weight: bold;
    color: white;
    letter-spacing: 10px;
}

/* TODO INPUT */
.todo-input {
    width: 100%;
    height: 50px;
    margin-top: 30px;
    border-radius: 5px;
    border: none;
}

.todo-input:focus {
    outline: none !important;
    border: none;
}